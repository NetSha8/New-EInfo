---
import { MapPin, Globe, Check } from "lucide-astro";

const localAreas = [
    "Perpignan",
    "Canet-en-Roussillon",
    "Saint-Cyprien",
    "Cabestany",
    "Rivesaltes",
];
---

<section id="zone" class="py-20 md:py-28 bg-dark-950 relative overflow-hidden">
    <!-- Background Map Pattern -->
    <div
        class="absolute inset-0 opacity-[0.03]"
        style="background-image: url('/map-pattern.svg'); background-size: cover;"
    >
    </div>

    <div class="container-custom relative z-10">
        <div class="grid md:grid-cols-2 gap-12 items-center reveal">
            <!-- Text Content -->
            <div>
                <div
                    class="w-14 h-14 rounded-xl bg-primary-600/10 flex items-center justify-center mb-6"
                >
                    <MapPin class="w-7 h-7 text-primary-400" />
                </div>
                <h2 class="section-title text-main mb-6">
                    Zone d'intervention
                </h2>
                <p class="text-lg text-secondary mb-8">
                    Je privilégie la proximité pour les entreprises des
                    <strong>Pyrénées-Orientales</strong> (66).
                </p>

                <div class="space-y-6">
                    <!-- Présentiel -->
                    <div class="flex gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-dark-800 flex items-center justify-center border border-dark-700 flex-shrink-0"
                        >
                            <MapPin class="w-5 h-5 text-primary-400" />
                        </div>
                        <div>
                            <h3 class="text-main font-bold text-lg">
                                En présentiel
                            </h3>
                            <p class="text-secondary text-sm mb-2">
                                Disponilbe sur Perpignan et alentours
                            </p>
                            <div class="flex flex-wrap gap-2">
                                {
                                    localAreas.map((area) => (
                                        <span class="text-xs py-1 px-2 rounded-md bg-dark-800 text-secondary border border-dark-700">
                                            {area}
                                        </span>
                                    ))
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Distanciel -->
                    <div class="flex gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-dark-800 flex items-center justify-center border border-dark-700 flex-shrink-0"
                        >
                            <Globe class="w-5 h-5 text-primary-400" />
                        </div>
                        <div>
                            <h3 class="text-main font-bold text-lg">
                                à distance
                            </h3>
                            <p class="text-secondary text-sm">
                                Partout en France via Google Meet / Zoom.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Card -->
            <div class="relative">
                <div
                    class="glass-card p-8 md:p-12 text-center relative overflow-hidden group"
                >
                    <!-- Decorate background -->
                    <div
                        class="absolute inset-0 bg-primary-600/5 group-hover:bg-primary-600/10 transition-colors duration-500"
                    >
                    </div>

                    <div
                        class="relative w-24 h-24 rounded-2xl bg-primary-600/10 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-500"
                    >
                        <Globe class="w-12 h-12 text-primary-400" />
                    </div>

                    <h3 class="relative text-2xl font-bold text-main mb-3">
                        Collaboration flexible
                    </h3>
                    <p class="relative text-secondary text-lg">
                        Selon vos besoins et vos contraintes.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
