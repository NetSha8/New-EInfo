---
import { Wrench } from "lucide-astro";

const techCategories = [
    {
        title: "Développement Web",
        techs: ["TypeScript", "Lua", "C", "HTML / CSS moderne"],
    },
    {
        title: "Plateforme / Déploiement",
        techs: [
            "Docker",
            "VPS (Linux)",
            "Kamal",
            "GitHub Actions",
            "Nginx",
            "OVH",
        ],
    },
    {
        title: "CMS & E-commerce",
        techs: ["WordPress", "Wix", "Shopify"],
    },
];
---

<section id="technologies" class="py-20 md:py-28 bg-dark-900">
    <div class="container-custom">
        <!-- Section Header -->
        <div class="text-center mb-12 md:mb-16">
            <div
                class="w-14 h-14 rounded-xl bg-primary-600/10 flex items-center justify-center mx-auto mb-4"
            >
                <Wrench class="w-7 h-7 text-primary-400" />
            </div>
            <h2 class="section-title text-main">Technologies utilisées</h2>
            <p class="text-secondary max-w-2xl mx-auto">
                Des outils modernes et éprouvés pour des solutions robustes et
                maintenables.
            </p>
        </div>

        <!-- Tech Categories - Glass Cards -->
        <div class="grid md:grid-cols-3 gap-6 md:gap-8">
            {
                techCategories.map((category, index) => (
                    <div
                        class={`glass-card reveal p-6 text-center md:text-left delay-${(index + 1) * 100}`}
                    >
                        <h3 class="text-lg font-semibold text-main mb-4">
                            {category.title}
                        </h3>
                        <div class="flex flex-wrap justify-center md:justify-start gap-2">
                            {category.techs.map((tech) => (
                                <span class="tech-badge hover:scale-105 transition-transform">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
