---
export interface Props {
    title: string;
    description: string;
    image: string;
    imageAlt: string;
    technologies: string[];
    link?: string;
    className?: string;
}

const { title, description, image, imageAlt, technologies, link, className = "" } = Astro.props;
---

<article
    class={`glass-card reveal overflow-hidden group hover:shadow-2xl transition-all duration-300 flex flex-col ${className}`}
>
    <!-- Image Container -->
    <div class="relative overflow-hidden h-48 md:h-56 bg-dark-800">
        <img
            src={image}
            alt={imageAlt}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-dark-950 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        />
    </div>

    <!-- Content -->
    <div class="p-6 md:p-8 flex-grow flex flex-col">
        <!-- Title -->
        <h3 class="text-xl md:text-2xl font-bold text-main mb-3">{title}</h3>

        <!-- Description -->
        <p class="text-secondary text-sm md:text-base leading-relaxed mb-5">
            {description}
        </p>

        <!-- Technologies -->
        <div class="mb-6 flex-grow">
            <p class="text-xs font-semibold text-primary-400 mb-3 uppercase tracking-wide">
                Technologies
            </p>
            <div class="flex flex-wrap gap-2">
                {
                    technologies.map((tech) => (
                        <span class="tech-badge text-xs">{tech}</span>
                    ))
                }
            </div>
        </div>
    </div>

    <!-- Footer Sticky -->
    <div class="sticky bottom-0 bg-dark-900/95 backdrop-blur-sm border-t border-dark-800 px-6 md:px-8 py-4">
        {
            link ? (
                <a
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 font-semibold transition-colors duration-300 group/link"
                >
                    Voir le projet
                    <span class="transform group-hover/link:translate-x-1 transition-transform duration-300">
                        →
                    </span>
                </a>
            ) : (
                <span class="inline-flex items-center gap-2 text-dark-500 font-semibold cursor-not-allowed">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4">
                        <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    Projet privé
                </span>
            )
        }
    </div>
</article>
